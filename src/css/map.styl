.map
  min-height 100%
  height 100%
  width 100%

//- Esri Overrides, they need multiple classes to make them higher priority, either that or !important
.map .esriLegendServiceLabel
  display none

.map .esriLegendService
  padding-bottom 0
  margin-bottom 0

.esriLegendLayer
  font-size 12px

.map .esriScalebar
  bottom 5px
  z-index 5

.map .esriMeasurement
  text-align center
  margin-top 15px

.map .esriMeasurement .esriMeasurementSeparator
  display none

.esriMeasurement .esriToggleButton .dijitButtonNode
  width inherit !important

.imagery-hover-modal
  padding 10px
  position absolute
  cursor pointer
  transform translate(-50%, 30%)
  font-size 12px
  background #fffee2
  box-shadow 0px 0px 2px 0 rgba(0, 0, 0, 0.2)
  div
    display flex
    margin-bottom 5px

  h4
    margin-right 5px


.results__fires-badge
.results__viirs-badge
.results__modis-badge
.results__loss-badge
.results__gain-badge
.results__total-biomass-badge
.results__average-biomass-badge
  margin 20px auto 10px
  text-align center
  padding 5px
  width 200px

.results__fires-badge
.results__viirs-badge
.results__modis-badge
  border 2px solid $goldTheme

.results__loss-badge
  border 2px solid #E291B2

.results__gain-badge
  border 2px solid #7978E8
  
.results__total-biomass-badge
  border 2px solid #5CCEF8

.results__average-biomass-badge
  border 2px solid #50AC58

.results__loss--count-container
.results__gain--count-container
.results__total-biomass--count-container
.results__average-biomass--count-container
  margin: 20px 0 10px 0

.results__fires-active
.results__viirs-active
.results__modis-active
.results__fires-count
.results__viirs-count
.results__modis-count
  color #E94E02

.results__fires-count
.results__viirs-count
.results__modis-count
.results__loss--count
.results__gain--count
.results__total-biomass--count
.results__average-biomass--count
  font-weight bold
  font-size 24px

.results__loss--count
.results__loss--unit
  color #E291B2

.results__gain--count
.results__gain--unit
  color #7978E8

.results__loss--unit
.results__gain--unit
.results__total-biomass--unit
.results__average-biomass--unit
  padding 0 3px

.results__total-biomass--count
.results__total-biomass--unit
  color #5CCEF8

.results__average-biomass--count
.results__average-biomass--unit
  color #50AC58

.results__legend-container
  justify-content space-between
  font-size 12px
  padding 5px 0
  display flex
  & span
    padding 0 10px

.result__biomass-totals
  border 1px solid $lightGray
  left 20px !important
  top 20px !important
  background white
